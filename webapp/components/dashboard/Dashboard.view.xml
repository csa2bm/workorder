<core:View controllerName="com.twobm.mobileworkorder.components.dashboard.Dashboard" xmlns:core="sap.ui.core"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:l="sap.ui.layout" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
	xmlns:mic="sap.suite.ui.microchart" height="100%">
	<App class="dashboardClass">
		<Page title="{i18n>Dashboard-Title}">
			<content>
				<FlexBox alignItems="Left" justifyContent="Left">
					<items>
						<GenericTile id="userTile" class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="{DashBoardModel>/Fullname}"
							subheader="{DashBoardModel>/Position}" headerImage="{DashBoardModel>/ImagePath}" frameType="TwoByOne" press="press">
							<tileContent>
								<TileContent footer="">
									<content>
										<FeedContent contentText="Hello Lau, Welcome to 2BM Mobile Work Order." subheader="Have a great day!" value=""></FeedContent>
									</content>
								</TileContent>
							</tileContent>
						</GenericTile>
						<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginEnd sapUiTinyMarginTop tileLayout" visible="{device>/isNotPhone}"
							backgroundImage="../webapp/localService/mockData/2bmTileLogo7.png" frameType="TwoByOne" press="press">
							<tileContent>
								<TileContent footer="" class="sapUiSmallMargin">
									<content>
										<FeedContent class="sapUiTinyMarginEnd" contentText="" subheader="" value=""></FeedContent>
									</content>
								</TileContent>
							</tileContent>
						</GenericTile>
					</items>
				</FlexBox>
				<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="{i18n>Dashboard-WorkOrdersTile-Header}" subheader=""
					size="S" frameType="OneByOne" press="onPressOtherWorkorders">
					<tileContent>
						<TileContent footer="" size="S">
							<content>
								<NumericContent size="S" value="{DashBoardModel>/orderCount}" valueColor="" icon="sap-icon://eam-work-order"/>
							</content>
						</TileContent>
					</tileContent>
				</GenericTile>
				<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="{i18n>Dashboard-NotificationsTile-Header}" subheader=""
					size="S" frameType="OneByOne" press="onPressNotifications">
					<tileContent>
						<TileContent footer="" size="S">
							<content>
								<NumericContent size="S" value="{DashBoardModel>/notificationCount}" valueColor="" icon="sap-icon://notification"/>
							</content>
						</TileContent>
					</tileContent>
				</GenericTile>
				<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="{i18n>Dashboard-CreateNotificationTile-Header}" size="S"
					frameType="OneByOne" press="onPressCreateNotification">
					<tileContent>
						<TileContent size="S">
							<content>
								<ImageContent src="sap-icon://add"/>
							</content>
						</TileContent>
					</tileContent>
				</GenericTile>
				<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="{i18n>Dashboard-ScanObjectTile-Header}" subheader=""
					size="S" frameType="OneByOne" press="onPressScanObject">
					<tileContent>
						<TileContent>
							<content>
								<ImageContent src="sap-icon://bar-code"/>
							</content>
						</TileContent>
					</tileContent>
				</GenericTile>
				<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="{i18n>Dashboard-TechnicalObjectsTile-Header}" size="S"
					frameType="OneByOne" press="onPressFunctionalLocations">
					<tileContent>
						<TileContent>
							<content>
								<ImageContent src="sap-icon://functional-location"/>
							</content>
						</TileContent>
					</tileContent>
				</GenericTile>
			</content>
			<footer>
				<Toolbar id="detailToolbar">
					<content>
						<!--<core:Icon id="syncIndicator" width="3em" height="3em" color="{syncStatusModel>/SyncColor}" noTabStop="true" press="showSyncQuickview"-->
						<!--	src="{syncStatusModel>/SyncIcon}" tooltip="Sync status"></core:Icon>-->
						<!--<BusyIndicator id="syncBusyIndicator" visible="{syncStatusModel>/IsSynching}"/>-->
						<mvc:XMLView width="7em" viewName="com.twobm.mobileworkorder.components.offline.Status"/>
						<mvc:XMLView viewName="com.twobm.mobileworkorder.components.offline.ErrorListControl"/>
						<ToolbarSpacer></ToolbarSpacer>
						<!--<Button type="Reject" visible="{syncStatusModel>/InErrorState}" text="Shows Errors" press="openErrorsView"></Button>-->
					</content>
				</Toolbar>
			</footer>
		</Page>
	</App>
</core:View>