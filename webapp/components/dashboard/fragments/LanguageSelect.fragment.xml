<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<SelectDialog
		title="{i18n>Dashboard-SelectLanguageDialogHeader}"
		class="sapUiPopupWithPadding"
		items="{languagesModel>/Languages}"
		search="handleLanguageSearch"
		confirm="handleLanguageChanged">
		<StandardListItem
			title="{languagesModel>LanguageText}"
			icon="{path: 'languagesModel>Image', formatter:'.getLanguageFlag' }" />
	</SelectDialog>
</core:FragmentDefinition>