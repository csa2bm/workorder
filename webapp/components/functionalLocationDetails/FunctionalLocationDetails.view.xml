<core:View controllerName="com.twobm.mobileworkorder.components.functionalLocationDetails.FunctionalLocationDetails" xmlns:core="sap.ui.core"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:l="sap.ui.layout" xmlns:mvc="sap.ui.core.mvc" xmlns:m="sap.m" xmlns="sap.uxap"
	xmlns:blocks="com.twobm.mobileworkorder.components.functionalLocationDetails.blocks.configuration" height="100%">
	<m:Page showNavButton="true" navButtonPress="onNavigationButtonPress" title="{i18n>FunctionalLocationDetails-Title}">
		<ObjectPageLayout id="functionalLocationObjectPage" enableLazyLoading="false">
			<headerTitle>
				<ObjectPageHeader objectTitle="{path:'Description'}" objectSubtitle="{path:'Equipment'}"/>
			</headerTitle>
			<sections>
			<ObjectPageSection>
					<subSections>
						<ObjectPageSubSection id="functionalLocationDetails-GeneralSubsection" title="{i18n>FunctionalLocationDetails-GeneralSubSection}">
							<blocks>
								<blocks:GeneralBlock/>
							</blocks>
						</ObjectPageSubSection>
					</subSections>
				</ObjectPageSection>
				<ObjectPageSection>
					<subSections>
						<ObjectPageSubSection id="functionalLocationDetails-MeasuringPointsSubsection" title="{i18n>FunctionalLocationDetails-MeasuringPointsSubSection}">
							<blocks>
								<blocks:MeasuringPointsBlock/>
							</blocks>
						</ObjectPageSubSection>
					</subSections>
				</ObjectPageSection>
					<ObjectPageSection>
					<subSections>
						<ObjectPageSubSection id="functionalLocationDetails-PendingOrdersSubSection" title="{i18n>FunctionalLocationDetails-PendingOrdersSubSection}">
							<blocks>
								<blocks:PendingOrdersBlock/>
							</blocks>
						</ObjectPageSubSection>
					</subSections>
				</ObjectPageSection>
				<ObjectPageSection>
					<subSections>
						<ObjectPageSubSection id="functionalLocationDetails-OrderHistroySubSection" title="{i18n>FunctionalLocationDetails-OrderHistorySubSection}">
							<blocks>
								<blocks:OrderHistoryBlock/>
							</blocks>
						</ObjectPageSubSection>
					</subSections>
				</ObjectPageSection>
				<ObjectPageSection>
					<subSections>
						<ObjectPageSubSection id="functionalLocationDetails-notificationHistorySubSection" title="{i18n>FunctionalLocationDetails-NotificationHistorySubSection}">
							<blocks>
								<blocks:NotificationHistoryBlock/>
							</blocks>
						</ObjectPageSubSection>
					</subSections>
				</ObjectPageSection>
			</sections>
		</ObjectPageLayout>
		<m:footer>
			<m:Toolbar>
					<m:ToolbarSpacer></m:ToolbarSpacer>
					<m:Button id="createNotification" press="onPressCreateNotification" text="{i18n>FunctionalLocationDetails-CreateNotificationBtnTitle}" type="Emphasized">
						<m:layoutData>
							<m:OverflowToolbarLayoutData priority="NeverOverflow"/>
						</m:layoutData>
					</m:Button>
			</m:Toolbar>
		</m:footer>
	</m:Page>
</core:View>