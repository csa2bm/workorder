<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog title="Attachment" class="sapUiPopupWithPadding" stretch="false" showHeader="false">
		<beginButton>
			<Button text="{i18n>FunctionalLocationDetails-MeasuringPointBlock-CreateMeasurementPopOver-CloseButton}" press="closeAddMeasurement"/>
		</beginButton>
		<endButton>
			<Button type="Accept" text="{i18n>deleteAttachmentButtonText}" press="onDeleteFile"></Button>
		</endButton>
		<buttons></buttons>
		<content>
			<VBox>
				<Label text="{i18n>FunctionalLocationDetails-MeasuringPointBlock-CreateMeasurementPopOver-EnterReading}"/>
				<HBox>
					<Input type="Text"/>
					<Label text="{ViewModel/MeasUnit}"/>
				</HBox>
			</VBox>
		</content>
	</Dialog>
</core:FragmentDefinition>