	xmlns:vbm="sap.ui.vbm" xmlns="sap.m">
	<Table id="idMeasuringHistoryTable" items="{ path: 'MeasPointMeasDoc', sorter: { path: 'Reader', descending: false}}"
		noDataText="{i18n>EquipmentBlockNoEquipmentAdded}">
		<columns>
			<Column minScreenWidth="Tablet">
				<Text text="{i18n>MeasuringPointsBlockColoumDateTime}"/>
			</Column>
			<Column>
				<Text text="{i18n>MeasuringPointsBlockColoumNameAndNumber}"/>
			</Column>
			<Column>
				<Text text="{i18n>MeasuringPointsBlockColoumReadByName}"/>
			</Column>
			<Column>
				<Text text="{i18n>MeasuringPointsBlockColoumReadUnit}"/>
			</Column>
			<Column width="5em" vAlign="Middle"></Column>
			<Column width="1.5em" vAlign="Middle"></Column>
		</columns>
		<items>
			<ColumnListItem type="Active" press="onMeasuringPointItemPress">
				<cells>
					<!--
					<ObjectIdentifier text="{Funcldescr}" title="{FunclocDisp}"/>
					<ObjectIdentifier text="{ShortText}" title="{Equipment}"/>
					<core:Icon src="sap-icon://slim-arrow-right" color="Gray"/>
					-->
					<ObjectIdentifier text="{path: 'ReadingDate', type: 'sap.ui.model.type.DateTime', formatOptions: { style: 'short' }}" title=""/>
					<ObjectIdentifier text="{ShortText}" title="{Measpoint}"/>
					<ObjectIdentifier text="{Fullname}" title="{Reader}"/>
					<ObjectIdentifier text="{RecordedValue} {RecordedUnit}" title=""/>
					<!--<ObjectIdentifier text="Oil preasure" title="12382382938"/>
					<ObjectIdentifier text="14,5" title="PSI"/>
					<ObjectIdentifier text="{/OrderStatus}" title="PSI"/>-->
					<!--<Button id="readingButton" enabled="{EditModeModel>/EditMode}" class="sapUiMediumMarginEnd" icon="sap-icon://measure" press="addMeasurement"></Button>
					<core:Icon src="sap-icon://slim-arrow-right" color="Gray"/> -->
