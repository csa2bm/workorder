<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:ca="sap.ca.ui" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:form="sap.ui.layout.form" xmlns:layout="sap.ui.layout"
	controllerName="com.twobm.mobileworkorder.components.notificationCreate.NotificationCreate">
	<Page id="createPage" showNavButton="true" navButtonPress="goBack" title="{i18n>NotificationCreate-Title}"
		class="sapUiFioriObjectPage appBackgroundColor">
		<content>
			<!-- General data -->
			<layout:form.SimpleForm minWidth="1024" title="{i18n>NotificationCreate-General}" maxContainerCols="2" editable="true"
				layout="ResponsiveGridLayout" labelSpanL="3" labelSpanM="3" emptySpanL="4" emptySpanM="4" columnsL="1" columnsM="1" class="editableForm">
				<layout:content>
					<Label text="{i18n>NotificationCreate-Description}"></Label>
					<Input id="shortDescription" value="{ShortText}" valueHelpRequest="showAccountF4" valueHelpOnly="false" showValueHelp="false"></Input>
					<Label text="{i18n>NotificationCreate-Notes}"></Label>
					<!--valueHelpRequest="showContactF4" -->
					<TextArea id="remark" liveChange="onContactInputFieldChanged" value="{LongText}"></TextArea>
					<Label text="{i18n>NotificationCreate-Priority}"></Label>
					<Select id="priority" selectedKey="{Priority}" items="{NotificationDropdownsModel>/priority}" class="pos_input">
						<items>
							<core:Item key="{NotificationDropdownsModel>priorityKey}" text="{NotificationDropdownsModel>priorityValue}"></core:Item>
						</items>
					</Select>
				</layout:content>
			</layout:form.SimpleForm>
			<!-- Object -->
			<layout:form.SimpleForm minWidth="1024" title="{i18n>NotificationCreate-Location}" maxContainerCols="3" editable="true"
				layout="ResponsiveGridLayout" labelSpanL="3" labelSpanM="3" emptySpanL="4" emptySpanM="4" columnsL="1" columnsM="1" class="editableForm">
				<layout:content>
					<Label text="{i18n>NotificationCreate-FunctionalLocation}"></Label>
					<Input id="functionalLocation" value="{FunctionalLoc}" showSuggestion="true" showValueHelp="true"
						valueHelpRequest="handleValueHelpFunctionalLocation" suggestionItems="{/FunctionalLocationsSet}">
						<suggestionItems>
							<core:Item text="{FunctionalLocation}"/>
						</suggestionItems>
					</Input>
					<Button id="selectorButton" text="{i18n>NotificationCreate-SelectButton}" press="onSelectBtnPress"></Button>
					<Label text=""></Label>
					<Text text="{FuncLocDesc}"/>
					<Label text="{i18n>NotificationCreate-Equipment}"></Label>
					<Input id="equipment" value="{Equipment}" showSuggestion="true" showValueHelp="true" valueHelpRequest="handleValueHelpEquipment"
						suggestionItems="{/EquipmentsSet}">
						<suggestionItems>
							<core:Item text="{Equipment}"/>
						</suggestionItems>
					</Input>
					<Label text=""></Label>
					<Text text="{EquipmentDesc}"/>
				</layout:content>
			</layout:form.SimpleForm>
		</content>
		<footer id="footer">
			<Toolbar>
				<content>
					<ToolbarSpacer></ToolbarSpacer>
					<Button type="Emphasized" press="handleSaveNotification" text="{i18n>NotificationCreate-SaveButton}">
						<layoutData>
							<OverflowToolbarLayoutData priority="NeverOverflow"/>
						</layoutData>
					</Button>
					<Button press="goBack" text="{i18n>NotificationCreate-CancelButton}">
						<layoutData>
							<OverflowToolbarLayoutData priority="NeverOverflow"/>
						</layoutData>
					</Button>
				</content>
			</Toolbar>
		</footer>
	</Page>
</core:View>