	xmlns="sap.uxap" xmlns:layout="sap.ui.layout" xmlns:m="sap.m" xmlns:blocks="com.twobm.mobileworkorder.components.notificationDetails.blocks.configuration"
	height="100%">
	<m:Page showNavButton="true" navButtonPress="onNavigationButtonPress" title="{i18n>notificationDetailsTitle}">
		<!--
