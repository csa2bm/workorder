		<ObjectPageLayout id="ObjectPageLayout" enableLazyLoading="false">
			<headerTitle>
				<ObjectPageHeader headerDesign="Dark" objectTitle="{path:'ShortText'}" objectSubtitle="{path:'NotifNo'}"></ObjectPageHeader>
			</headerTitle>
			<sections>
				<ObjectPageSection title="{i18n>SubSectionTitleGeneral}">
					<subSections>
						<ObjectPageSubSection title="{i18n>SubSectionTitleGeneral}">
							<blocks>
								<blocks:GeneralBlock/>
							</blocks>
						</ObjectPageSubSection>
					</subSections>
				</ObjectPageSection>
				<ObjectPageSection title="{i18n>SubSectionTitleNotes}">
					<subSections>
						<ObjectPageSubSection title="{i18n>SubSectionTitleNotes}">
							<blocks>
								<blocks:NotesBlock/>
							</blocks>
						</ObjectPageSubSection>
					</subSections>
				</ObjectPageSection>
				<ObjectPageSection title="{i18n>SubSectionTitleAttachments}">
					<subSections>
						<ObjectPageSubSection title="{i18n>SubSectionTitleAttachments}">
							<blocks>
								<blocks:AttachmentsBlock/>
								
							</blocks>
						</ObjectPageSubSection>
					</subSections>
				</ObjectPageSection>
			</sections>
		</ObjectPageLayout>
		<m:footer>
			<m:OverflowToolbar>
				<m:content>
					<m:ToolbarSpacer></m:ToolbarSpacer>
					<m:Button id="editNotificationButton" icon="sap-icon://sap-icon://edit" ariaDescribedBy="genericButtonDescription"
						press="editNotificationPressed">
						<m:layoutData>
							<m:OverflowToolbarLayoutData priority="NeverOverflow"/>
						</m:layoutData>
					</m:Button>
				</m:content>
			</m:OverflowToolbar>
		</m:footer>
	</m:Page>
</core:View>