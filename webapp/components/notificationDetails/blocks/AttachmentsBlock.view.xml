<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:l="sap.ui.layout"
	controllerName="com.twobm.mobileworkorder.components.notificationDetails.blocks.AttachmentsBlock" xmlns:html="http://www.w3.org/1999/xhtml">
	<l:VerticalLayout class="sapUiSmallMargin" width="100%">
		<FlexBox id="attachmentsList" class="sapUiMediumMarginBegin" items="{ path: 'NotifAttachmentsSet', factory: '.itemFactory'}" wrap="Wrap" />
		<l:HorizontalLayout >
			<Button id="cameraButton" visible="true" class="sapUiMediumMarginEnd" icon="sap-icon://camera" press="capturePhoto"></Button>
		</l:HorizontalLayout>
	</l:VerticalLayout>
</mvc:View>