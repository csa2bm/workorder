<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:l="sap.ui.layout"
	controllerName="com.twobm.mobileworkorder.components.notificationDetails.blocks.PhotosBlock" xmlns:html="http://www.w3.org/1999/xhtml">
	<l:VerticalLayout class="sapUiSmallMarginEnd" width="100%">
		<l:HorizontalLayout >
			<Button id="cameraButton" class="sapUiMediumMarginEnd"
				icon="sap-icon://camera" press="onCapturePhoto"></Button>
			<Button id="videoButton" visible="false" class="sapUiMediumMarginEnd"
				icon="sap-icon://video" press="captureVideo"></Button>
		</l:HorizontalLayout>
		<FlexBox id="attachmentsList" items="{ path: 'NotifAttachmentsSet', factory: '.itemFactory'}" wrap="Wrap"/>
	</l:VerticalLayout>
</mvc:View>