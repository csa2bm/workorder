<core:View controllerName="com.twobm.mobileworkorder.components.notificationDetails.blocks.TasksBlock" xmlns:core="sap.ui.core" xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m">
	<Button class="sapUiSmallMarginEnd" icon="sap-icon://add" press="onCreateTask"/>
	<Table id="tasksList" items="{ path: 'NotifTasksSet', sorter: { path: 'TaskSortNo', descending: false}}" noDataText="{i18n>NotificationDetails-TasksBlock-NoData}">
		<columns>
			<Column id="sortNumberColumn" minScreenWidth="Tablet">
				<Text text="{i18n>NotificationDetails-TasksBlock-SortNumberHeader}"/>
			</Column>
			<Column id="codeGroupColumn">
				<Text text="{i18n>NotificationDetails-TasksBlock-CodeGroupHeader}"/>
			</Column>
			<Column id="codeColumn">
				<Text text="{i18n>NotificationDetails-TasksBlock-CodeHeader}"/>
			</Column>
			<Column id="textColumn">
				<Text text="{i18n>NotificationDetails-TasksBlock-TextHeader}"/>
			</Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					<Text text="{TaskSortNo}"/>
					<ObjectIdentifier text="{TaskSortNo}" title="{TxtTaskgrp}"/>
					<ObjectIdentifier text="{TaskCode}" title="{TxtTaskcd}"/>
					<Text text="{TaskText}"/>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</core:View>