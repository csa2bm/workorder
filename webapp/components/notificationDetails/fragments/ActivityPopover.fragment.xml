<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog title="{i18n>NotificationDetails-ActivityPopover-Title}" class="sapUiPopupWithPadding" stretch="false" showHeader="true" showCloseButton="true">
		<buttons>
			<Button class="sapUiSmallMarginEnd" icon="sap-icon://delete" visible="{ViewModel>/isEditing}" press="onDeleteActivity"/>
			<Button  type="Emphasized" text="Submit" press="onSubmitActivity"></Button>
			<Button text="Close" press="onPopopoverClose"/>
		</buttons>
		<content>
			<VBox>
				<Label text="{i18n>NotificationDetails-ActivityPopover-CodeGroup}" design="Bold" class="sapUiTinyMarginBottom"/>
				<Input type="Text" value="{ActCodegrp}" showValueHelp="true"/>
				<Label text="{i18n>NotificationDetails-ActivityPopover-Code}" design="Bold" class="sapUiTinyMarginBottom sapUiTinyMarginTop"/>
				<Input type="Text" value="{ActCode}" showValueHelp="true"/>
				<Label text="{i18n>NotificationDetails-ActivityPopover-Text}" design="Bold" class="sapUiTinyMarginBottom sapUiTinyMarginTop"/>
				<Input type="Text" value="{Acttext}" />
			</VBox>
		</content>
	</Dialog>
</core:FragmentDefinition>