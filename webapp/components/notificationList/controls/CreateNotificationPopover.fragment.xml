<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
<ResponsivePopover id="CreateNotificationPopOver" showCloseButton="true" title="Create Notification" class="sapUiPopupWithPadding"  modal="true" afterOpen="refreshInputFields">
		<beginButton>
			<Button text="{i18n>createNotificationSaveButton}" press="handleSaveNotification"/>
		</beginButton>
		<content>
			<VBox class="sapUiSmallMargin">
				<Label text="Select date" labelFor="DP3"/>

		<Label text="" />
			<DatePicker
				id="dateInput"
				class="sapUiSmallMarginBottom"
				change="handleChangeDate"
				valueStateText="Please insert date"
				displayFormat="dd-MM-yyyy"
				valueFormat="dd-MM-yyyy"
				value="{CreateNotificationModel>/Date}"
				
				/>
				
						
			</VBox>
		</content>
	</ResponsivePopover>
</core:FragmentDefinition>