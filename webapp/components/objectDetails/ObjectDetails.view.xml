<core:View controllerName="com.twobm.mobileworkorder.components.objectDetails.ObjectDetails" xmlns:core="sap.ui.core"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:l="sap.ui.layout" xmlns:mvc="sap.ui.core.mvc" xmlns:m="sap.m" xmlns="sap.uxap"
	xmlns:blocks="com.twobm.mobileworkorder.components.objectDetails.blocks.configuration" height="100%">
	<m:Page showNavButton="true" navButtonPress="onNavigationButtonPress" title="{i18n>EquipmentDetailsTitle}" height="100%">
		<ObjectPageLayout id="equipmentObjectPage" enableLazyLoading="false">
			<headerTitle>
				<ObjectPageHeader headerDesign="Dark" objectTitle="{path:'Equidescr'}" objectSubtitle="{path:'Equipment'}"/>
			</headerTitle>
			<sections>
				<ObjectPageSection title="{i18n>SubSectionTitleOperationInformation}">
					<subSections>
						<ObjectPageSubSection id="operationInformationSubsection" title="{i18n>SubSectionTitleOperationInformation}">
							<blocks>
								<blocks:GeneralBlock/>
							</blocks>
						</ObjectPageSubSection>
					</subSections>
				</ObjectPageSection>
				<ObjectPageSection title="{i18n>SubSectionTitleMesuringPoints}">
					<subSections>
						<ObjectPageSubSection id="MeasuringPointsSubsection" title="{i18n>SubSectionTitleMesuringPoints}">
							<blocks>
								<blocks:MeasuringPointsBlock/>
							</blocks>
						</ObjectPageSubSection>
					</subSections>
				</ObjectPageSection>
				<ObjectPageSection title="{i18n>SubSectionTitleOrderHistory}">
					<subSections>
						<ObjectPageSubSection id="orderHistroySubSection" title="{i18n>SubSectionTitleOrderHistory}">
							<blocks>
								<blocks:OrderHistoryBlock/>
							</blocks>
						</ObjectPageSubSection>
					</subSections>
				</ObjectPageSection>
				<ObjectPageSection title="{i18n>SubSectionTitleNotificationHistory}">
					<subSections>
						<ObjectPageSubSection id="notificationHistorySubSection" title="{i18n>SubSectionTitleNotificationHistory}">
							<blocks>
								<blocks:NotificationHistoryBlock/>
							</blocks>
						</ObjectPageSubSection>
					</subSections>
				</ObjectPageSection>
			</sections>
		</ObjectPageLayout>
		<m:footer>
			<m:OverflowToolbar>
				<m:content>
					<m:ToolbarSpacer></m:ToolbarSpacer>
					<m:Button id="createNotification" press="onPressCreateNotification" text="Create Notification" type="Emphasized">
						<m:layoutData>
							<m:OverflowToolbarLayoutData priority="NeverOverflow"/>
						</m:layoutData>
					</m:Button>
				</m:content>
			</m:OverflowToolbar>
		</m:footer>
	</m:Page>
</core:View>