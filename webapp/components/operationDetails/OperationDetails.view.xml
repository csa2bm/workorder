<core:View controllerName="com.twobm.mobileworkorder.components.operationDetails.OperationDetails" 
xmlns:core="sap.ui.core"
xmlns:html="http://www.w3.org/1999/xhtml" 
xmlns:l="sap.ui.layout" xmlns:mvc="sap.ui.core.mvc" 
xmlns:m="sap.m" 
xmlns="sap.uxap"
xmlns:blocks="com.twobm.mobileworkorder.components.operationDetails.blocks.configuration"
height="100%">
	
	<m:Page showNavButton="true" navButtonPress="onNavigationButtonPress" title="{i18n>OperationDetailsTitle}" height="100%">
		<ObjectPageLayout id="operationObjectPageId" enableLazyLoading="false">
			<headerTitle>
				<ObjectPageHeader headerDesign="Dark" objectTitle="{path:'Description'}" objectSubtitle="{path:'Activity'}"/>
			</headerTitle>
			<sections>
				<ObjectPageSection>
					<subSections>
						<ObjectPageSubSection id="generalSubSection" title="{i18n>OperationDetails-GeneralSubSection}">
							<blocks>
								<blocks:OperationGeneralBlock/>
							</blocks>
						</ObjectPageSubSection>
					</subSections>
				</ObjectPageSection>
				<ObjectPageSection>
					<subSections>
						<ObjectPageSubSection id="notesSubSection" title="{i18n>OperationDetails-NotesSubSection}">
							<blocks>
								<blocks:OperationNotesBlock/>
							</blocks>
						</ObjectPageSubSection>
					</subSections>
				</ObjectPageSection>
				</sections>
			</ObjectPageLayout>
		</m:Page>
	</core:View>