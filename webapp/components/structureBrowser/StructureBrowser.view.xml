<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:l="sap.ui.layout"
	controllerName="com.twobm.mobileworkorder.components.structureBrowser.StructureBrowser" xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page title="Browse Structure" showNavButton="true" navButtonPress="navigateBack">
			<headerContent>
				<l:HorizontalLayout>
					<core:Icon width="3em" height="3em" noTabStop="true" press="onSearch" src="sap-icon://search"/>
				</l:HorizontalLayout>
			</headerContent>
				<content>
					<List id="workOrderTableId" items="{path: 'viewModel>/items'}" noDataText="{i18n>StructureBrowser-NoStructures}"
						class="workOrderListTableClass">
					<CustomListItem type="Active" press="onPressItem" busy="{viewModel>busy}">
						<HBox width="100%" class="sapUiTinyMarginTop sapUiTinyMarginBottom sapUiTinyMarginBegin sapUiSmallMarginEnd">
									<HBox width="{parts:[{path:'viewModel>level'}],formatter:'.formatIndentWidth'}"></HBox>
			
									<core:Icon class="sapUiSmallMarginTop sapUiSmallMarginEnd" src="{parts:[{path:'viewModel>leaf'},{path:'viewModel>expanded'}],formatter:'.isLeaf'}"/>
									<core:Icon class="sapUiSmallMarginTop sapUiSmallMarginEnd" src="{parts:[{path:'viewModel>type'}],formatter:'.typeIcon'}"/>
			
									<HBox width="100%">
									<ObjectIdentifier text="{parts:[{path:'viewModel>name'}]}"
										title="{parts:[{path:'viewModel>description'}]}"/>
									</HBox>
									<Button icon="sap-icon://hint" press="onDetailsPress" class="sapUiSmallMarginBegin sapUiSmallMarginEnd"/>
									<Button icon="sap-icon://accept" visible="{path:'visibleSelectButtonModel>/parentView',formatter:'.EnableButtonVisbleCheck'}"
										press="onSelectBtnPress" class="sapUiSmallMarginEnd"/>
										
							</HBox>
						</CustomListItem>
					</List>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>