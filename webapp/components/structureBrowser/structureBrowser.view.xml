<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
	controllerName="com.twobm.mobileworkorder.components.structureBrowser.structureBrowser" xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page title="Browse Structure">
				<content>
						<Table id="workOrderTableId" items="{path: 'viewModel>/items'}" noDataText="No Work Orders" showSeparators="true" class="workOrderListTableClass">
					<columns>
						<Column width="1rem" hAlign="Center" vAlign="Middle">
							<header>
					
							</header>
						</Column>
						<Column width="1.5rem" hAlign="Center" vAlign="Middle">
							<header>
			
							</header>
						</Column>
						<Column width="auto">
							<header>
								
							</header>
						</Column>
						
						<Column width="2.5rem">
							<header>
								
							</header>
						</Column>
							<Column width="2.7rem">
							<header>
								
							</header>
						</Column>
						
					</columns>
					<items>
						<ColumnListItem type="Active" press="onPressItem">
							<cells>
							<core:Icon class="sapUiTinyMarginTop" src="{parts:[{path:'viewModel>leaf'},{path:'viewModel>expanded'}],formatter:'.isLeaf'}" />
							<core:Icon class="sapUiTinyMarginTop" src="{parts:[{path:'viewModel>type'}],formatter:'.typeIcon'}" />
							
							<ObjectIdentifier text="{parts:[{path:'viewModel>level'}, {path:'viewModel>id'}],formatter:'.indentForLevel'}" title="{parts:[{path:'viewModel>level'}, {path:'viewModel>name'}],formatter:'.indentForLevel'}"/>
							
							<Button icon="sap-icon://hint" /> <Button icon="sap-icon://accept" /> 
							</cells>
						</ColumnListItem>
					</items>
				</Table>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>