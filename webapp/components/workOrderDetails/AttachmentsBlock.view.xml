<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:l="sap.ui.layout"
	controllerName="com.twobm.mobileworkorder.components.workOrderDetails.AttachmentsBlock" xmlns:html="http://www.w3.org/1999/xhtml">
	<l:VerticalLayout class="sapUiSmallMarginEnd" width="100%">
		<l:HorizontalLayout >
			<!--class="rightAlign"-->
			<!--<custom:CustomFileUploader id="customFileUploader" visible="false" icon="sap-icon://add" iconOnly="true" buttonOnly="true"
					uploadOnChange="true" uploadComplete="onUploadComplete" class="sapUiSmallMarginEnd"/>-->
			<Button id="cameraButton" visible="true" class="sapUiMediumMarginEnd" icon="sap-icon://camera" press="capturePhoto"></Button>
		</l:HorizontalLayout>
		<Table id="attachmentsList" delete="deleteAttachment" mode="Delete" titel="{i18n>attachments}" items="{ path: 'OrderAttachments'}" 
			noDataText="{i18n>noAttachmentsAdded}"><!--, sorter: { path: 'CreateDate', descending: true} -->
			<columns>
				<!-- Icon column -->
				<Column demandPopin="true" popinDisplay="WithoutHeader" width="1rem"/>
				<Column demandPopin="true" popinDisplay="WithoutHeader" minScreenWidth="Small" width="1rem">
					<header>
						<Label text="{i18n>attachmentCreateDate}"/>
					</header>
				</Column>
				<Column demandPopin="true" popinDisplay="WithoutHeader" minScreenWidth="Small" width="1rem">
					<header>
						<Label text="{i18n>attachmentCreatedBy}"/>
					</header>
				</Column>
			</columns>
			<items>
				<ColumnListItem type="Active" press="clickPreviewAttachment">
					<cells>
						<core:Icon id="attachmentListImageIcon" class="sapUiSmallMarginEnd" noTabStop="true" size="2em" src="sap-icon://picture"/>
						<ObjectIdentifier text="{parts:[{path:'CreateDate'}],type: 'sap.ui.model.type.DateTime', formatOptions: {pattern: 'dd-MMM-yyyy'}}"/>
						<ObjectIdentifier text="{CreatedBy}"/>
					</cells>
				</ColumnListItem>
			</items>
		</Table>
	</l:VerticalLayout>
</mvc:View>