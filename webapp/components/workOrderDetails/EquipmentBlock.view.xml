<core:View controllerName="com.twobm.mobileworkorder.components.workOrderDetails.EquipmentBlock" xmlns:core="sap.ui.core" xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m">
	<Table id="idProductsTable" items="{ path: 'OrderObject', sorter: { path: 'FunclocDisp', descending: false}}" noDataText="{i18n>EquipmentBlockNoEquipmentAdded}">
		<columns>
			<Column>
				<Text text="{i18n>EquipmentBlockColoumFuncLoc}"/>
			</Column>
			<Column>
				<Text text="{i18n>EquipmentBlockColoumEquipment}"/>
			</Column>
			<Column width="1.5em" vAlign="Middle"></Column>
		</columns>
		<items>
			<ColumnListItem type="Active" press="onEquipmentItemPress">
				<cells>
					<ObjectIdentifier text="{Funcldescr}" title="{FunclocDisp}"/>
					<ObjectIdentifier text="{ShortText}" title="{Equipment}"/>
					<core:Icon src="sap-icon://slim-arrow-right" color="Gray"/>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</core:View>