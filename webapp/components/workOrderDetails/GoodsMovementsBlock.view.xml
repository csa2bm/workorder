				<Column demandPopin="true" popinDisplay="WithoutHeader">
					<header>
						<Label text="{i18n>MaterialsBlockColoumDescription}"/>
					</header>
				</Column>
				<Column demandPopin="true" popinDisplay="Inline" width="5em" vAlign="Middle">
					<header>
						<Label text="{i18n>MaterialsBlockColoumQuantity}"/>
					</header>
				</Column>
				<Column demandPopin="false" width="1.5em" vAlign="Middle"></Column>
			</columns>
			<items>
				<ColumnListItem type="{parts:[{path:'Parent/OrderStatus'}],formatter:'.checkOrderStatusForType'}" press="goToMaterialDetailForSelectedMaterial">
					<cells>
						<ObjectIdentifier text="{Description}" title="{Matnr}"/>
						<ObjectIdentifier text="{Quantity} {Unit}"/>
						<core:Icon src="{parts:[{path:'Parent/OrderStatus'}],formatter:'.showArrow'}" color="Gray"/>
					</cells>
				</ColumnListItem>
			</items>
		</Table>
