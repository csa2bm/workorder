	<l:VerticalLayout class="sapUiSmallMarginEnd" width="100%">
		<l:HorizontalLayout>
			<Button class="sapUiSmallMarginEnd" icon="sap-icon://add" press="addMaterial" enabled="{parts:[{path:'Parent/OrderStatus'}],formatter:'.orderStatusValid'}"></Button>
