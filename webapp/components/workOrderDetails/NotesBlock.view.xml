<core:View controllerName="com.twobm.mobileworkorder.components.workOrderDetails.NotesBlock" xmlns:core="sap.ui.core"
	xmlns:f="sap.ui.layout.form" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" xmlns:vbm="sap.ui.vbm" xmlns="sap.m"
	xmlns:layout="sap.ui.layout">
	<VBox class="sapUiSmallMargin">
		<layout:VerticalLayout id="NotesLayoutId" width="100%"></layout:VerticalLayout>
	</VBox>
	<VBox  id="LongtextBtnView" visible="{parts:[{path:'OrderStatus'}],formatter:'.isOrderStatusNotCompleted'}">
	<Button id="editButton" visible="true" class="sapUiMediumMarginEnd" icon="sap-icon://edit" press="editLongText"></Button>
	<Button id="saveButton" visible="false" class="sapUiMediumMarginEnd" icon="sap-icon://save" press="SaveLongText"></Button>
	</VBox>
</core:View>