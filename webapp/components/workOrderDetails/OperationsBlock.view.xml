<core:View  xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form"
	controllerName="com.twobm.mobileworkorder.components.workOrderDetails.OperationsBlock" xmlns:l="sap.ui.layout" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" xmlns:vbm="sap.ui.vbm" xmlns="sap.m">
	<Table id="idOperationTable" items="{ path: 'OrderOperation', sorter: { path: 'Activity', descending: false}}">
		<columns>
		<Column popinDisplay="Inline">
				<Text text="{i18n>OperationBlockColoumOperation}"/>
			</Column>
			<!--
			<Column hAlign="Center" demandPopin="false" minScreenWidth="Tablet" width="10em" vAlign="Middle">
				<Text text="{i18n>OperationBlockColoumWorkActivty}"/>
			</Column>
			<Column hAlign="Center" demandPopin="true" width="5em" vAlign="Middle">
				<Text text="{i18n>OperationBlockColoumCompleted}"/>
			</Column>-->
			<Column width="5em" vAlign="Middle"></Column>
			<Column width="1.5em" vAlign="Middle"></Column>
		</columns>
		<items>
			<ColumnListItem type="Active" press="onOperationItemPress">
				<cells>
					<ObjectIdentifier text="{Description}" title="{Activity}"/>
					<!--
					<ObjectNumber number="{WorkActivity}" unit="{Unit}"/>
					<core:Icon src="{parts:[{path:'Complete'}],formatter:'.operationStatus'}" color="{parts:[{path:'Complete'}],formatter:'.opStatusColor'}"/>-->
					<Button id="readingButton" class="sapUiMediumMarginEnd" icon="sap-icon://complete" press="onCompleOperationbtnPressed" type="{parts:[{path:'Complete'}],formatter:'.opStatusColor'}" enabled="{parts:[{path:'Complete'}],formatter:'.orderStatusCompleted'}"></Button>
					<core:Icon src="sap-icon://slim-arrow-right" color="Gray"/>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</core:View>