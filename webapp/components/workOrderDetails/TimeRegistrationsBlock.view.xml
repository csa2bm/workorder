<core:View controllerName="com.twobm.mobileworkorder.components.workOrderDetails.TimeRegistrationsBlock" xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m">
	<l:VerticalLayout class="sapUiSmallMarginEnd" width="100%">
		<l:HorizontalLayout >
			<Button class="sapUiSmallMarginEnd" icon="sap-icon://add" press="openAddTimeRegistrationPopover"></Button>
		</l:HorizontalLayout>
		<Table items="{ path: 'OrderTimeRegistration' , sorter:  [{path: 'RegistrationDate', descending: true}]}"
			noDataText="{i18n>TimeRegistrationsBlockColumnNoTimeAdded}">
			<columns>
				<Column>
					<Text text="{i18n>TimeRegistrationsBlockColumnDate}"/>
				</Column>
				<Column>
					<Text text="{i18n>TimeRegistrationsBlockColumnPerson}"/>
				</Column>
				<Column width="5em" vAlign="End" hAlign="Center">
					<Text text="{i18n>TimeRegistrationsBlockColumnTime}" />
				</Column>
			</columns>
			<items>
				<ColumnListItem>
					<cells>
						<ObjectIdentifier title="{path:'RegistrationDate', type:'sap.ui.model.type.Date', formatOptions:'short'}"/>
						<Text text="{Name}"/>
						<Text text="{WorkTime}"/>
					</cells>
				</ColumnListItem>
			</items>
		</Table>
	</l:VerticalLayout>
</core:View>