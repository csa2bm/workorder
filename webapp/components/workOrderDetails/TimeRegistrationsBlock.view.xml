<core:View controllerName="com.twobm.mobileworkorder.components.workOrderDetails.TimeRegistrationsBlock" xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m">
	<l:VerticalLayout class="sapUiSmallMarginEnd" width="100%">
		<l:HorizontalLayout >
			<Button class="sapUiSmallMarginEnd" icon="sap-icon://add" press="openTimeRegistrationPopoverCreate" visible="{parts:[{path:'OrderStatus'}],formatter:'.orderStatusValid'}"></Button>
		</l:HorizontalLayout>
		<Table items="{ path: 'OrderTimeRegistration' , sorter: [{path: 'RegistrationDate', descending: true}]}"
			noDataText="{i18n>TimeRegistrationsBlockColumnNoTimeAdded}">
			<columns>
				<Column demandPopin="true" popinDisplay="Inline">
					<Text text="{i18n>TimeRegistrationsBlockColumnDate}"/>
				</Column>
				<Column demandPopin="true" popinDisplay="WithoutHeader">
					<Text text="{i18n>TimeRegistrationsBlockColumnPerson}"/>
				</Column>
				<Column demandPopin="true" popinDisplay="Inline" width="5em" vAlign="Middle">
					<Text text="{i18n>TimeRegistrationsBlockColumnTime}"/>
				</Column>
				<Column demandPopin="false" width="1.5em" vAlign="Middle"></Column>
			</columns>
			<items>
				<ColumnListItem type="{parts:[{path:'Parent/OrderStatus'}],formatter:'.checkOrderStatusForType'}" press="openTimeRegistrationPopoverUpdate">
					<cells>
						<ObjectIdentifier title="{path:'RegistrationDate', type:'sap.ui.model.type.Date', formatOptions:'short'}"/>
						<Text text="{Name}"/>
						<Text text="{WorkTime} {=${WorkTime} === '1' ? ${i18n>TimeRegistrationsBlockHour} : ${i18n>TimeRegistrationsBlockHours}}"/>
						<core:Icon src="{parts:[{path:'Parent/OrderStatus'}],formatter:'.showArrow'}" color="Gray"/>
					</cells>
				</ColumnListItem>
			</items>
		</Table>
	</l:VerticalLayout>
</core:View>