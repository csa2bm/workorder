						press="orderStatusBtnPressed" text="{path:'OrderStatus',formatter:'.getOrderStatusBtnText'}"
						visible="{path:'OrderStatus',formatter:'.isOrderNotCompleted'}" type="{path:'OrderStatus',formatter:'.isOrderNotCompletedType'}">
						<m:layoutData>
							<m:OverflowToolbarLayoutData priority="NeverOverflow"/>
						</m:layoutData>
