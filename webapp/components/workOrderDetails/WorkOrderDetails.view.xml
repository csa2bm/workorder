		<ObjectPageLayout id="ObjectPageLayout" enableLazyLoading="false">
			<headerTitle>
				<ObjectPageHeader objectTitle="{parts:['i18n>HeaderTitle', {path:'Orderid'}, {path:'ShortText'}],formatter:'.getI18nTextReplace2'}">
					
				</ObjectPageHeader>
			</headerTitle>
			<sections>
				<ObjectPageSection title="{i18n>General}">
					<subSections>
						<ObjectPageSubSection title="{i18n>General}">
							<blocks>
								<blocks:GeneralBlock/>
							</blocks>
						</ObjectPageSubSection>
					</subSections>
				</ObjectPageSection>
				<ObjectPageSection title="{i18n>SubSectionTitleOperations}">
					<subSections>
						<ObjectPageSubSection title="{i18n>SubSectionTitleOperations}">
							<blocks>
								<blocks:OperationsBlock/>
							</blocks>
						</ObjectPageSubSection>
					</subSections>
				</ObjectPageSection>
				<ObjectPageSection title="{i18n>SubSectionTitleObjects}">
					<subSections>
						<ObjectPageSubSection title="{i18n>SubSectionTitleObjects}">
							<blocks>
								<blocks:EquipmentBlock/>
							</blocks>
						</ObjectPageSubSection>
					</subSections>
				</ObjectPageSection>
				<ObjectPageSection title="{i18n>SubSectionTitleAttachments}">
					<subSections>
						<ObjectPageSubSection title="{i18n>SubSectionTitleAttachments}">
							<blocks>
								<blocks:AttachmentsBlock/>
							</blocks>
						</ObjectPageSubSection>
					</subSections>
				</ObjectPageSection>
			</sections>
		</ObjectPageLayout>
		<m:footer>
			<m:Toolbar>
				<m:ToolbarSpacer/>
				<m:Button text="Start" type="Emphasized"/>
			</m:Toolbar>
		</m:footer>
	</m:Page>
</core:View>