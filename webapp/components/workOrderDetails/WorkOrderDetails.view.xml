<core:View controllerName="com.twobm.mobileworkorder.components.workOrderDetails.WorkOrderDetails" xmlns:core="sap.ui.core" xmlns="sap.uxap"
	xmlns:layout="sap.ui.layout" xmlns:m="sap.m" xmlns:blocks="com.twobm.mobileworkorder.components.workOrderDetails.blocks"
	height="100%">
	<m:Page showNavButton="true" navButtonPress="onNavigationButtonPress" title="Work Order">
		<ObjectPageLayout id="ObjectPageLayout" enableLazyLoading="false">
			<headerTitle>
				<ObjectPageHeader objectTitle="Section sample"></ObjectPageHeader>
			</headerTitle>
			<headerContent>
				<m:ObjectAttribute title="" text="{ShortText}"/>
			</headerContent>
			<sections>
				<ObjectPageSection title="General">
					<subSections>
						<ObjectPageSubSection title="General">
							<blocks>
								<blocks:GeneralBlock/>
							</blocks>
						</ObjectPageSubSection>
					</subSections>
				</ObjectPageSection>
				<ObjectPageSection title="Operations">
					<subSections>
						<ObjectPageSubSection title="Operations">
							<blocks>
								<blocks:OperationsBlock/>
							</blocks>
						</ObjectPageSubSection>
					</subSections>
				</ObjectPageSection>
				<ObjectPageSection title="Attachments">
					<subSections>
						<ObjectPageSubSection title="Attachments">
							<blocks>
								<blocks:OperationsBlock/>
							</blocks>
						</ObjectPageSubSection>
					</subSections>
				</ObjectPageSection>
			</sections>
		</ObjectPageLayout>
		<m:footer>
			<m:Toolbar>
				<m:ToolbarSpacer/>
				<m:Button text="Start" type="Emphasized"/>
			</m:Toolbar>
		</m:footer>
	</m:Page>
</core:View>