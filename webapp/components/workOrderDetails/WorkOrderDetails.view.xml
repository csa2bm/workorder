		<ObjectPageLayout id="ObjectPageLayout" enableLazyLoading="false">
			<headerTitle>
				<ObjectPageHeader headerDesign="Dark" objectTitle="{path:'ShortText'}" objectSubtitle="{path:'Orderid'}"></ObjectPageHeader>
			</headerTitle>
			<sections>
				<ObjectPageSection>
					<subSections>
						<ObjectPageSubSection id="generalSubSection" title="{i18n>WorkOrderDetails-GeneralSubSection}">
							<blocks>
								<blocks:GeneralBlock/>
							</blocks>
						</ObjectPageSubSection>
					</subSections>
				</ObjectPageSection>
				<ObjectPageSection>
					<subSections>
						<ObjectPageSubSection id="notesSubSection" title="{i18n>WorkOrderDetails-NotesSubSection}">
							<blocks>
								<blocks:NotesBlock/>
							</blocks>
						</ObjectPageSubSection>
					</subSections>
				</ObjectPageSection>
					<ObjectPageSection>
					<subSections>
						<ObjectPageSubSection id="objectsSubSection" title="{i18n>WorkOrderDetails-ObjectsSubSection}">
							<blocks>
								<blocks:ObjectsBlock/>
							</blocks>
						</ObjectPageSubSection>
					</subSections>
				</ObjectPageSection>
				<ObjectPageSection>
					<subSections>
						<ObjectPageSubSection id="componentsSunSection" title="{i18n>WorkOrderDetails-ComponentsSubSection}">
							<blocks>
								<blocks:ComponentsBlock/>
							</blocks>
						</ObjectPageSubSection>
					</subSections>
				</ObjectPageSection>
				<ObjectPageSection>
					<subSections>
						<ObjectPageSubSection id="operationsSubSection" title="{i18n>WorkOrderDetails-OperationsSubSection}">
							<blocks>
								<blocks:OperationsBlock/>
							</blocks>
						</ObjectPageSubSection>
					</subSections>
				</ObjectPageSection>
				<ObjectPageSection>
					<subSections>
						<ObjectPageSubSection id="measuringPointsSubSection" title="{i18n>WorkOrderDetails-MeasuringPointsSubSection}">
							<blocks>
								<blocks:MeasuringPointsBlock/>
							</blocks>
						</ObjectPageSubSection>
					</subSections>
				</ObjectPageSection>
				<ObjectPageSection>
					<subSections>
						<ObjectPageSubSection id="materialsSubSection" title="{i18n>WorkOrderDetails-MaterialsSubSection}">
							<blocks>
								<blocks:GoodsMovementsBlock/>
							</blocks>
						</ObjectPageSubSection>
					</subSections>
				</ObjectPageSection>
				<ObjectPageSection>
					<subSections>
						<ObjectPageSubSection id="timeRegistrationSubSection" title="{i18n>WorkOrderDetails-TimeRegistrationsSubSection}">
							<blocks>
								<blocks:TimeRegistrationsBlock/>
							</blocks>
						</ObjectPageSubSection>
					</subSections>
				</ObjectPageSection>
				<ObjectPageSection>
					<subSections>
						<ObjectPageSubSection id="attachmentsSubSection" title="{i18n>WorkOrderDetails-AttachmentsSubSection}">
							<blocks>
								<blocks:AttachmentsBlock/>
							</blocks>
						</ObjectPageSubSection>
					</subSections>
				</ObjectPageSection>
			</sections>
		</ObjectPageLayout>
		<m:footer>
			<m:OverflowToolbar>
				<m:content>
					<m:ToolbarSpacer></m:ToolbarSpacer>
					<m:Button id="orderStatusChangeButton" icon="sap-icon://accept" ariaDescribedBy="acceptButtonDescription genericButtonDescription"
						press="orderStatusBtnPressed" text="{path:'OrderStatus',formatter:'.getOrderStatusBtnText'}"
						visible="{path:'OrderStatus',formatter:'.isOrderNotCompleted'}" type="{path:'OrderStatus',formatter:'.isOrderNotCompletedType'}">
						<m:layoutData>
							<m:OverflowToolbarLayoutData priority="NeverOverflow"/>
						</m:layoutData>
					</m:Button>
				</m:content>
			</m:OverflowToolbar>
		</m:footer>
	</m:Page>
</core:View>