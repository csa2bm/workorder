								</blocks>
							</ObjectPageSubSection>
						</subSections>
					</ObjectPageSection>
					<ObjectPageSection>
						<subSections>
							<ObjectPageSubSection id="attachmentsSubSection" title="{i18n>WorkOrderDetails-AttachmentsSubSection}">
								<blocks>
									<blocks:AttachmentsBlock/>
								</blocks>
							</ObjectPageSubSection>
						</subSections>
					</ObjectPageSection>
				</sections>
