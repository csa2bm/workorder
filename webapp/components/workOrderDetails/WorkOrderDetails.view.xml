	xmlns:layout="sap.ui.layout" xmlns:m="sap.m" xmlns:blocks="com.twobm.mobileworkorder.components.workOrderDetails.blocks.configuration" height="100%">
	<m:Page showNavButton="true" navButtonPress="navigateBack" title="{i18n>WorkOrderDetails-Title}">
		<!--
