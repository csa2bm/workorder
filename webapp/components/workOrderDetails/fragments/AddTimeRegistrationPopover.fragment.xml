<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog title="Time Registration" class="sapUiPopupWithPadding" stretch="{device>/isPhone}" showHeader="true" showCloseButton="true">
		<beginButton>
			<Button type="Emphasized" text="{i18n>TimeRegistrationPopUpButtonCreate}" press="postTimeRegistration"></Button>
		</beginButton>
		<endButton>
			<Button text="{i18n>TimeRegistrationPopUpButtonClose}" press="closeAddTimeRegistrationPopover"/>
		</endButton>
		<buttons></buttons>
		<content>
			<VBox>
				<Label text="{i18n>TimeRegistrationPopUpDate}" design="Bold"/>
				<DatePicker dateValue="{/RegistrationDate}"></DatePicker>
				<Label text="{i18n>TimeRegistrationPopUpTime}" design="Bold"/>
				<Input placeholder="{i18n>TimeRegistrationPopUpTimeTextPlaceHolder}" value="{/WorkTime}" />
			</VBox>
		</content>
	</Dialog>
</core:FragmentDefinition>