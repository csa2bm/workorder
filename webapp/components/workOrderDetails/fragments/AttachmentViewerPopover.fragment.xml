<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog class="sapUiPopupWithPadding" stretch="{device>/isPhone}" showHeader="false">
		<beginButton>
			<Button icon="sap-icon://delete" type="Reject" text="{i18n>WorkOrderDetails-DeleteAttachmentButton}" press="onDeleteFile" visible="{parts:[{path:'ImageModel>/AttachmentID'}],formatter:'.attachmentPopUpShowDeleteButton'}" enabled="{parts:[{path:'OrderStatus'}],formatter:'.orderStatusValid'}"></Button>
		</beginButton>
		<endButton>
			<Button text="Close" press="closeAttachmentPopupButton"/>
		</endButton>
		<buttons></buttons>
		<content>
			<VBox>
				<Image src="{ImageModel>/ImagePath}" height="{ImageModel>/ImageHeight}"/>
			</VBox>
		</content>
	</Dialog>
</core:FragmentDefinition>