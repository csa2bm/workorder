<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog title="Attachment" class="sapUiPopupWithPadding" stretch="false" showHeader="false" showCloseButton="true">
		<beginButton>
			<Button icon="sap-icon://delete" type="Reject" text="{i18n>deleteAttachmentButtonText}" press="onDeleteFile" visible="{parts:[{path:'ImageModel>/AttachmentID'}],formatter:'.attachmentPopUpShowDeleteButton'}" enabled="{parts:[{path:'OrderStatus'}],formatter:'.orderStatusValid'}"></Button>
		</beginButton>
		<endButton>
			<Button text="Close" press="closeAttachmentPopupButton"/>
		</endButton>
		<buttons></buttons>
		<content>
			<VBox>
				<!--class="sapUiSmallMargin"-->
				<!--<Label text="Select new work date" labelFor="DP3"/>-->
				<Image src="{ImageModel>/ImagePath}" height="{ImageModel>/ImageHeight}"/>
			
			</VBox>
		</content>
	</Dialog>
</core:FragmentDefinition>