<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog class="sapUiPopupWithPadding" stretch="false" showHeader="false" showCloseButton="true">
		<beginButton>
			<Button text="Cancel" press="closeAddMeasurement"/>
		</beginButton>

		<endButton>
			<Button  type="Emphasized" text="Submit" press="onSubmitMeasurement"></Button>
		</endButton>
		<buttons></buttons>
		<content>
			<VBox>
				<!--class="sapUiSmallMargin"-->
				<!--<Label text="Select new work date" labelFor="DP3"/>-->
				<Label text="Measuring Point" design="Bold" class="sapUiTinyMarginBottom"/>
				<Label text="{ViewModel>/Descriptn}" class="sapUiSmallMarginBottom" />
				<Label text="Enter reading" design="Bold" class="sapUiTinyMarginBottom"/>
				<HBox alignItems="Center">
				<Input type="Text" width="16em" value="{ViewModel>/RecordedValue}" />
				<Label text="{ViewModel>/MeasUnit}" width="3em" class="sapUiSmallMarginBegin" />
				</HBox>
			</VBox>
		</content>
	</Dialog>
</core:FragmentDefinition>