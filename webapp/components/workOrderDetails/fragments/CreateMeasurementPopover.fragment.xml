<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog title="Take Measurement" class="sapUiPopupWithPadding" stretch="false" showHeader="true">
		<beginButton>
			<Button type="Emphasized" text="OK" press="onSubmitMeasurement"></Button>
		</beginButton>
		<endButton>
			<Button text="Close" press="closeAddMeasurement"/>
		</endButton>
		<buttons></buttons>
		<content>
			<VBox>
				<Label text="Measuring Point" design="Bold" class="sapUiTinyMarginBottom"/>
				<Label text="{ViewModel>/Descriptn}" class="sapUiSmallMarginBottom"/>
				<Label text="Minimum threshold" design="Bold" class="sapUiTinyMarginBottom"/>
				<Label text="{parts:[{path:'ViewModel>/MinLimit', type: 'sap.ui.model.type.Float', formatOptions: { maxFractionDigits: 2 }}, {path:'ViewModel>/ValueMinLimit'}],formatter:'.showTextForMinValue'}{path:'ViewModel>/MinLimit', type: 'sap.ui.model.type.Float', formatOptions: { maxFractionDigits: 2 }}"
					class="sapUiSmallMarginBottom"/>
				<Label text="Maximum threshold" design="Bold" class="sapUiTinyMarginBottom"/>
				<Label text="{parts:[{path:'ViewModel>/MaxLimit', type: 'sap.ui.model.type.Float', formatOptions: { maxFractionDigits: 2 }}, {path:'ViewModel>/ValueMaxLimit'}],formatter:'.showTextForMaxValue'}" class="sapUiSmallMarginBottom"/>
				<Label text="Enter reading" design="Bold" class="sapUiTinyMarginBottom"/>
				<HBox alignItems="Center">
					<Input type="Number" width="16em"
						value="{path : 'ViewModel>/RecordedValue', type : 'sap.ui.model.type.Float', formatOptions : {minIntegerDigits: 2}}"/>
					<Label text="{ViewModel>/MeasUnit}" width="3em" class="sapUiSmallMarginBegin"/>
				</HBox>
			</VBox>
		</content>
	</Dialog>
</core:FragmentDefinition>