<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<VBox class="sapUiSmallMargin">
		<f:SimpleForm id="LongTextFragmentDisplayId"
			minWidth="1024"
			maxContainerCols="1"
			editable="false"
			layout="ResponsiveGridLayout"
			title=""
			labelSpanL="4"
			labelSpanM="4"
			emptySpanL="1"
			emptySpanM="1"
			columnsL="12"
			columnsM="12">
			<f:content>
				<Text text="{LongText}" valueLiveUpdate="true">
					<layoutData>
						<l:GridData span="L12 M12 S12" />
					</layoutData>
					</Text>
				<l:HorizontalLayout> 
				</l:HorizontalLayout> 
			</f:content>
		</f:SimpleForm>
	</VBox>
</core:FragmentDefinition>