<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<ActionSheet
		title="Choose Your Action"
		showCancelButton="true"
		placement="Top">
		<buttons>
			<Button text="To other user.." icon="sap-icon://group" press="onOrderReAssignToUserButtonPressed" />
			<Button text="To me" icon="sap-icon://customer" press="onOrderReAssignToMePressed" enabled="{path:'Personresp',formatter:'.allowAssignToMe'}" />
			<Button text="Unassign me" icon="sap-icon://cancel" press="onOrderReAssignUnassignPressed" enabled="{path:'Personresp',formatter:'.allowUnassign'}"/>
		</buttons>
	</ActionSheet>
</core:FragmentDefinition>