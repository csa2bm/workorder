<core:View controllerName="com.twobm.mobileworkorder.components.workOrderList.WorkOrderList" xmlns:core="sap.ui.core"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:l="sap.ui.layout" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m">
	<App class="wordOrderListClass">
		<Page showNavButton="true" navButtonPress="onNavigationButtonPress" title="{i18n>WorkOrderListPageTitle}">
			<headerContent>
				<l:HorizontalLayout>
					<core:Icon width="3em" height="3em" noTabStop="true" press="handleViewSettingsDialogButtonPressed" src="sap-icon://drop-down-list"/>
				</l:HorizontalLayout>
			</headerContent>
			<content>
				<Table id="workOrderTableId" items="{/OrderSet}" noDataText="No Work Orders" showSeparators="true" class="workOrderListTableClass">
					<columns>
						<Column width="2rem">
							<header>
								<Label text="{i18n>WorkOrderListColumnDateHeaderLabel}"/>
							</header>
						</Column>
						<Column width="6rem">
							<header>
								<Label text="{i18n>WorkOrderListColumnWorkOrderHeaderLabel}"/>
							</header>
						</Column>
						<Column width="6rem" minScreenWidth="Tablet">
							<header>
								<Label text="{i18n>WorkOrderListColumnFunctionalLocationHeaderLabel}"/>
							</header>
						</Column>
						<Column width="6rem" minScreenWidth="Tablet">
							<header>
								<Label text="{i18n>WorkOrderListColumnEquipmentHeaderLabel}"/>
							</header>
						</Column>
						<Column demandPopin="true" id="errorColumn" minScreenWidth="Small" width="1rem"/>
						<Column demandPopin="false" id="navigationColumn" minScreenWidth="Small" width="1rem"/>
					</columns>
					<items>
						<ColumnListItem type="Active" press="onWorkOrderItemPress">
							<cells>
								<!--	<VBox>
								<Label design="Bold" maxLines="1" text="asjhd ajkhd ajkhsd jkahd kjahds jkas djahs dkjas djkahs dkjah djkahs jd" />
								<Label design="" maxLines="1" text="asjhd ajkhd ajkhsd jkahd kjahds jkas djahs dkjas djkahs dkjah djkahs jd" class="sapUiTinyMarginTop" />
								</VBox>-->
								<ObjectIdentifier text="{path: 'FinishDate', type: 'sap.ui.model.type.DateTime', formatOptions: {pattern: 'dd-MM-yyyy'}}"
									title="{path: 'StartDate', type: 'sap.ui.model.type.DateTime', formatOptions: {pattern: 'dd-MM-yyyy'}}"/>
								<ObjectIdentifier text="{Orderid}" title="{ShortText}"/>
								<ObjectIdentifier text="{FunctLoc}" title="{Funcldescr}"/>
								<ObjectIdentifier text="{Equipment}" title="{Equidescr}"/>
								<core:Icon visible="{parts:[{path:'@com.sap.vocabularies.Offline.v1.inErrorState'}],formatter:'.isInErrorState'}" color="red"
									useIconTooltip="false" size="2rem" src="sap-icon://alert"></core:Icon>
								<core:Icon class="sapUiTinyMarginTop" src="sap-icon://slim-arrow-right" color="Gray"/>
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</content>
			<footer>
				<OverflowToolbar id="detailToolbar">
					<content>
						<core:Icon id="syncIndicator" width="3em" height="3em"
							color="{parts:[{path:'syncStatusModel>/Online'}, {path:'syncStatusModel>/PendingLocalData'}],formatter:'.getSyncStatusIconColor'}"
							noTabStop="true" press="showSyncQuickview"
							src="{parts:[{path:'syncStatusModel>/Online'}, {path:'syncStatusModel>/PendingLocalData'}],formatter:'.getSyncStateIcon'}"
							tooltip="Sync status"></core:Icon>
						<BusyIndicator id="syncBusyIndicator" visible="false"/>
						<ToolbarSpacer></ToolbarSpacer>
						<Button id="orderStatusChangeButton" icon="sap-icon://filter" ariaDescribedBy="acceptButtonDescription genericButtonDescription"
							press="orderFilterSelectPopUp" text="My Orders" type="Emphasized">
							<layoutData>
								<OverflowToolbarLayoutData priority="NeverOverflow"/>
							</layoutData>
						</Button>
					</content>
				</OverflowToolbar>
			</footer>
		</Page>
	</App>
</core:View>