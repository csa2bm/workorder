<core:View controllerName="com.twobm.mobileworkorder.components.workOrderList.WorkOrderList" xmlns:core="sap.ui.core" xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m">
	<Page title="Work Orders">
		<customHeader>
			<Bar>
			<contentLeft>
				<core:Icon src="sap-icon://overlay" color="green" class="sapUiTinyMarginBegin" />
			</contentLeft>	
		<contentMiddle>
			<Text text="Work Orders" /> 
		</contentMiddle>
			<contentRight>
			<Button icon="sap-icon://drop-down-list" press="handleViewSettingsDialogButtonPressed"/>	
			</contentRight>
			</Bar>
			<!--<Button icon="sap-icon://overlay" color="red" press="handleViewSettingsDialogButtonPressed"/>-->
			
		</customHeader>
		
		<content>
			<Table itemPress="onItemPress" items="{/data}" noDataText="No Work Orders">
				<columns>
							<Column>
						<header>
							<Label text="Date &amp; Time"/>
						</header>
					</Column>
					<Column>
						<header>
							<Label text="Work Order"/>
						</header>
					</Column>
					<Column>
						<header>
							<Label text="Functional Location"/>
						</header>
					</Column>
					<Column>
						<header>
							<Label text="Equipment"/>
						</header>
					</Column>
					<Column width="1.5em" vAlign="Middle">
						</Column>
			
					
				</columns>
				<items>
					<ColumnListItem type="Active">
						<cells>
							<ObjectIdentifier text="{End}" title="{Start}"/>
							<ObjectIdentifier text="{Number}" title="{ShortText}"/>
							<ObjectIdentifier text="{FunctionalLocationNumber}" title="{FunctionalLocationDescription}"/>
							<ObjectIdentifier text="{EquipmentNumber}" title="{EquipmentDescription}"/>
							<core:Icon src="{StatusIcon}" color="{StatusIconColor}" />
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</core:View>