<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns="sap.m">
	<ResponsivePopover class="sapUiPopupWithPadding" placement="PreferredTopOrFlip" title="{i18n>dataSyncPopupHeader}">
		<content>
			<l:VerticalLayout>
				<l:HorizontalLayout class="sapUiTinyMarginTopBottom">
					<core:Icon class="sapUiSmallMarginEnd"
						color="{parts:[{path:'syncStatusModel>/Online'}, {path:'syncStatusModel>/PendingLocalData'}],formatter:'.getSyncStatusIconColor'}"
						size="3em" noTabStop="true"
						src="{parts:[{path:'syncStatusModel>/Online'}, {path:'syncStatusModel>/PendingLocalData'}],formatter:'.getSyncStateIcon'}"></core:Icon>
					<Label class="syncStatusTextBig" id="syncStatusText"
						text="{parts:[{path:'syncStatusModel>/Online'}, {path:'syncStatusModel>/PendingLocalData'}],formatter:'.getSyncStateText'}"/>
				</l:HorizontalLayout>
				<l:HorizontalLayout class="sapUiTinyMarginTopBottom">
					<!--<core:Icon class="sapUiSmallMarginEnd" size="3em"-->
					<!--	color="{parts:[{path:'syncStatusModel>/Online'}],formatter:'.getNetworkConnectionStatusColor'}" noTabStop="true"-->
					<!--	src="{parts:[{path:'syncStatusModel>/Online'}],formatter:'.getNetworkConnectionStatusIcon'}"></core:Icon>-->
					<Label class="syncStatusText sapUiSmallMarginEnd" text="Network Connection:"/>
					<Label class="syncStatusTextBold sapUiSmallMarginEnd"
						text="{parts:[{path:'syncStatusModel>/Online'}],formatter:'.getNetworkConnectionStatusText'}"/>
				</l:HorizontalLayout>
				<!--<l:HorizontalLayout>-->
				<!--	<Label class="syncStatusText sapUiSmallMarginEnd" text="{i18n>pendingDataLabel}"/>-->
				<!--	<Label class="syncStatusTextBold" id="localDataSyncState" text="{syncStatusModel>/PendingLocalData}"/>-->
				<!--</l:HorizontalLayout>-->
				<l:HorizontalLayout>
					<Label class="syncStatusText sapUiSmallMarginEnd" text="{i18n>lastSyncLabel}"/>
					<Label class="syncStatusTextBold" id="lastSyncTime" text="{syncStatusModel>/LastSyncTime}"/>
				</l:HorizontalLayout>
				<Button class="sapUiSmallMarginTop" text="Synchronize Now" press="synchronizeData"></Button>
				<Button class="sapUiSmallMarginTop" text="Reset" press="resetStore"></Button>
				
			</l:VerticalLayout>
		</content>
	</ResponsivePopover>
</core:FragmentDefinition>