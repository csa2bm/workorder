<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<ActionSheet
		title="Choose Your Action"
		showCancelButton="true"
		placement="Bottom">
		<buttons>
			<Button text="All" icon="sap-icon://group" press="onOrderReAssignToUserButtonPressed" />
			<Button text="Only mine" icon="sap-icon://customer" press="onOrderReAssignToMePressed" />
			<Button text="Select.." icon="sap-icon://multi-select" press="onFilterWorkCenterSelect" />
		</buttons>
	</ActionSheet>
</core:FragmentDefinition>